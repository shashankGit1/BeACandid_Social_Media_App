<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.becandid.app.becandid.ui.login.StartPage06">

    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@+id/include_toolbar"
        android:subtitleTextColor="@color/white"
        android:titleTextColor="@color/white"
        android:background="@color/new_toolbar_color"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect_to_friends"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_toolbar"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:textColor="@color/md_orange_500"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Find Posts Location"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/connect_friends_desc"
        app:layout_constraintTop_toBottomOf="@+id/connect_to_friends"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="To show locations of all posts, we need to access your Location Permission"/>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/college_pic"
        android:src="@drawable/onboarding_group_college"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connect_friends_desc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:id="@+id/enter_phone_number_desc"
        app:layout_constraintTop_toBottomOf="@+id/college_pic"
        android:text="We never access your precise location and your location is never stored. We use location or connection information to show where anonymous posts are posted."
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/get_location"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_bg_light_orange"
        app:layout_constraintTop_toBottomOf="@+id/enter_phone_number_desc"
        android:text="Get Location"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/get_location"
        android:text="more info."
        />



</androidx.constraintlayout.widget.ConstraintLayout>
