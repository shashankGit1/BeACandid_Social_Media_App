<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/elevation_large">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/community_group_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@drawable/gradient_bg"
                android:scaleType="fitCenter"
                android:src="@color/md_grey_600"
                fresco:placeholderImage="@color/md_grey_600" />

            <TextView
                android:id="@+id/textViewCard"
                android:fontFamily="@font/quicksand_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/dummy_text"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/members_in_group"
                android:layout_width="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:layout_height="wrap_content"
                android:layout_above="@+id/group_tags_01"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="0 members 0 posts"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/group_tags_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/group_details"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/swipe_card_hashtags"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="Technology"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/group_tags_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/group_details"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/group_tags_01"
                android:background="@drawable/swipe_card_hashtags"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="School"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/group_tags_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/group_details"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@+id/group_tags_02"
                android:background="@drawable/swipe_card_hashtags"
                android:includeFontPadding="false"
                android:fontFamily="@font/quicksand_bold"
                android:padding="10dp"
                android:text="Health"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/group_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:maxLines="2"
                android:padding="10dp"
                tools:text="Sample text written on top of the card."
                android:textColor="@color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
