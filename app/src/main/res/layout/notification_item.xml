<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notification_background"
    android:padding="12dp"
    android:layout_marginBottom="5dp"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        fresco:roundedCornerRadius="25dp"
        android:id="@+id/notification_avatar"
        fresco:placeholderImage="@drawable/user" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notification_user"
        android:singleLine="true"
        android:text="username"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/notification_avatar"
        android:textSize="14sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:id="@+id/notification_post_time"
        android:text="time"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:textColor="@color/md_grey_600"
        android:layout_toRightOf="@+id/notification_avatar"
        android:layout_below="@+id/notification_user"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:id="@+id/notification_feeling_status"
        android:text="status"
        android:layout_marginLeft="10dp"
        android:maxLines="2"
        android:textColor="@color/md_grey_600"
        android:layout_toRightOf="@+id/notification_avatar"
        android:layout_below="@+id/notification_post_time"
        android:textSize="14sp"
        />


</RelativeLayout>

